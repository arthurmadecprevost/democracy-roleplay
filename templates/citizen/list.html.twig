
{% extends 'base.html.twig' %}

{% block title %}Citizens!{% endblock %}

{% block body %}
        <table class="table-auto">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Phone Number</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for citizen in citizens %}
                <tr>
                    <td>{{ citizen.id }}</td>
                    <td>{{ citizen.name }}</td>
                    <td>{{ citizen.surname }}</td>
                    <td>{{ citizen.phonenumber }}</td>
                    <td><a href="./show/{{ citizen.id }}">Voir la fiche</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
